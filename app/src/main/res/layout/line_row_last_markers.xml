<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/line_markers"
    android:focusable="true">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_item_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="150dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="showBottomSheetDialogFragment"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/dark_gray"
        app:cardElevation="@dimen/appbar_padding_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_marker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/image_marker"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/cell_markes_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:importantForAccessibility="no"
                android:contentDescription="@string/image_marker"
                android:src="@drawable/bus_back" />

            <TextView
                android:id="@+id/cell_markes_descriptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:importantForAccessibility="no"
                android:text="@string/dummy_text_short"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cell_markes_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cell_markes_descriptions"
                android:layout_above="@id/cell_markes_addr"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/dummy_text_short"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/cell_markes_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:layout_marginEnd="80dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/dummy_text_short"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>