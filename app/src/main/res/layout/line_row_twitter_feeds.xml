<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/click_line_instruc"
    android:focusable="true">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_item_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openUrl"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/light_gray"
        app:cardCornerRadius="@dimen/appbar_padding_top"
        app:cardElevation="@dimen/appbar_padding_top"
        app:contentPadding="@dimen/appbar_padding_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cell_feed_descriptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:onClick="openUrl"
                android:text="@string/dummy_text" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_feed_user"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@id/cell_feed_descriptions"
                android:contentDescription="@string/foto_user_feed"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_dashboard_black_24dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/cell_feed_user_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cell_feed_descriptions"
                android:layout_toEndOf="@id/img_feed_user"
                android:clickable="true"
                android:focusable="true"
                android:onClick="openUrl"
                android:padding="16dp"
                android:text="@string/nome_usuario" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>